<?xml version="1.0" encoding="UTF-8"?>
<project name="maven-antrun-" default="main">
  <target name="main">
    <copy todir="deploy/k8s" overwrite="true">
      <fileset dir="deploy/k8s/templates" />
    </copy>
    <copy todir="." overwrite="true">
      <fileset dir="scripts" />
    </copy>
    <replace dir="deploy" value="1.0" token="{VERSION}">
      <include name="**/*.yml" />
      <exclude name="**/templates/*.*" />
    </replace>
    <replace dir="deploy" value="process-service" token="{ARTIFACT}">
      <include name="**/*.yml" />
      <exclude name="**/templates/*.*" />
    </replace>
    <replace dir="." value="1.0" token="{VERSION}">
      <include name="**/*.sh" />
      <exclude name="**/scripts/*.*" />
    </replace>
    <replace dir="." value="process-service" token="{ARTIFACT}">
      <include name="**/*.sh" />
      <exclude name="**/scripts/*.*" />
    </replace>
  </target>
</project>
